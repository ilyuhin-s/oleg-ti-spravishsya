{
  "short_name": "Планирование",
  "name": "S.Volume планирование",
  "icons": {
    "16": "favicon.ico",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Планирование"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["static/js/content.js"]
    }
  ],
  "start_url": ".",
  "display": "standalone",
  "theme_color": "#000000",
  "background_color": "#ffffff",
  "host_permissions": [
    "https://*/*"
  ],
  "permissions": [
    "scripting",
    "tabs",
    "notifications",
    "http://*/",
    "https://*/"
  ]
}